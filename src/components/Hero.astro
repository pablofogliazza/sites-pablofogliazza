	.hero {
		padding-top: 12rem;
		padding-bottom: 3px;
		display: flex;
		justify-content: center;
		align-items: center;

		&__container {
			width: min(90%, 740px);
			margin: 0 auto;

			display: flex;
			flex-direction: column;
			gap: 6px;
		}

		&__buttons-wrapper {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			gap: 12px;
			margin-top: 12px;

			@media (min-width: 768px) {
				flex-direction: row;
			}
		}

		&__epigraph {
			font-family: p22-mackinac-pro, serif;
			font-weight: 300;
			font-style: normal;
			font-size: 1.8rem;
			line-height: 1.25;
			color: rgba(var(--dark), 1);
			max-width: 38ch;
			margin: 0 auto;
			text-align: center;
		}

		&__title {
			font-family: p22-mackinac-pro, serif;
			font-weight: 800;
			font-style: normal;
			font-size: 2.5rem;
			line-height: 1.15;
			color: rgba(var(--dark), 1);
			max-width: 38ch;
			margin: 0 auto;
			text-align: center;
		}

		&__button {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			padding: 1rem 2rem;
			margin: 0;
			font-family: p22-mackinac-pro, serif;
			font-weight: 700;
			font-style: normal;
			font-size: 1rem;
			line-height: 1;
			color: rgba(var(--light), 1);
			background-color: rgba(var(--dark), 1);
			border: 1px solid rgba(var(--dark), 1);
			border-radius: 3rem;
			text-decoration: none;
			box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.1);

			&:hover {
				background-color: rgba(var(--accent), 1);
				border: 1px solid rgba(var(--accent), 1);
			}

			&.button--outline {
				gap: 1.5rem;
				background-color: rgba(white, 0.6);
				border: 1px solid rgba(white, 1);
				color: rgba(var(--dark), 1);
				padding: 0.25rem;
				padding-bottom: 0.25rem;
				padding-right: 0.25rem;
				padding-left: 2rem;
				box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.1);

				svg {
					height: 1.5rem;
					width: auto;
					fill: rgba(var(--light), 1);
					display: block;
					margin: 0;
					padding: 0.5rem;
					background-color: rgba(var(--dark), 1);
					border-radius: 50%;
				}

				&:hover {
					background-color: rgba(var(--accent), 1);
					color: rgba(var(--light), 1);
					border-color: rgba(var(--accent), 1);
					box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.2);

					svg {
						background-color: rgba(var(--light), 1);
						fill: rgba(var(--accent), 1);
					}
				}
			}
		}
	}

