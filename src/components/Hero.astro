<style lang="scss">
	.hero {
		padding-top: 12rem;
		padding-bottom: 6rem;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		border-bottom: 1px solid rgba(var(--dark), 0.075);

		&__container {
			width: min(90%, 1500px);
			margin: 0 auto;

			display: flex;
			flex-direction: column;
			align-items: flex-start;
			gap: 14px;
		}

		&__background {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: -1;
			//background: radial-gradient(100% 70% at 50% 60%, #a9e6dd33 0%, rgba(var(--light), 1) 100%);
			filter: blur(15px);
		}

		&__buttons-wrapper {
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: center;
			gap: 16px;
			//margin-top: 12px;

			@media (min-width: 768px) {
				flex-direction: row;
				align-items: center;
			}
		}

		&__epigraph {
			font-family: var(--fontTitle);
			font-weight: 200;
			font-size: 1.6rem;
			line-height: 1;
			color: rgba(var(--dark), 1);
			opacity: 0.8;
		}

		&__title {
			font-family: var(--fontTitle);
			font-weight: 700;
			font-size: 3rem;
			line-height: 1.1;
			color: rgba(var(--dark), 1);

			max-width: 60%;
		}

		&__button {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			padding: 1rem 2rem;
			margin: 0;
			font-family: var(--fontText);
			font-weight: 500;
			font-style: normal;
			font-size: 15px;
			line-height: 1;
			color: rgba(var(--light), 1);
			background-color: rgba(var(--dark), 1);
			border: 1px solid rgba(var(--dark), 1);
			border-radius: 4rem;
			text-decoration: none;
			box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.1);

			&:hover {
				background-color: rgba(var(--accent), 1);
				background-image: linear-gradient(70deg, rgba(var(--dark), 0.1), rgba(var(--light), 0.1));
				border: 1px solid rgba(var(--accent), 1);
			}

			&.button--outline {
				gap: 1.5rem;
				background-color: rgba(white, 0.6);
				border: 1px solid rgba(white, 1);
				color: rgba(var(--dark), 1);
				padding: 0.25rem;
				padding-bottom: 0.25rem;
				padding-right: 0.25rem;
				padding-left: 2rem;
				box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.1);

				svg {
					height: 1.5rem;
					width: auto;
					fill: rgba(var(--light), 1);
					display: block;
					margin: 0;
					padding: 0.5rem;
					background-color: rgba(var(--dark), 1);
					border-radius: 50%;
				}

				&:hover {
					background-color: rgba(var(--accent), 1);
					color: rgba(var(--light), 1);
					border-color: rgba(var(--accent), 1);
					box-shadow: 0 2px 10px 0 rgba(var(--dark), 0.2);

					svg {
						background-color: rgba(var(--light), 1);
						fill: rgba(var(--accent), 1);
					}
				}
			}
		}

		&__icons {
			display: block;
			line-height: 0;
			text-decoration: none;
			color: rgba(var(--dark), 1);

			&:hover {
				color: rgba(var(--accent), 1);
			}
		}
	}

