---
import { socialLinks } from '@/data/siteData'
import { Icon } from 'astro-icon/components'
const currentYear = new Date().getFullYear()
const yearsExpirience = currentYear - 2006
console.log(currentYear - 2006)
---

<div class="footer">
	<div class="footer__container">
		<p class="footer__text">UI & Front&mdash;End Developer<br />2006 &mdash; {currentYear} &middot; {yearsExpirience} AÃ±os contribuyendo al mundo digital</p>
		<div class="footer__social">
			{
				socialLinks.map(({ url, name, icon }, index) => (
					<a href={url} target="_blank" rel="noopener noreferrer" aria-label={name} class="footer__social-link" title={name}>
						<Icon name={icon} size={24} />
