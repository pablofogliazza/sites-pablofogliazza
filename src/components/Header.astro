	<style lang="scss">
		header {
			display: grid;
			grid-template-columns: 1fr auto 1fr;
			align-items: center;

			width: calc(120% - 48px);
			margin: 0 auto 0 -10%;

			font-size: 15px;

			padding: 13px 24px;

			border-radius: 7px;

			background-color: #ffffff;
			box-shadow: 0 2px 12px 0 #00000010;

			// padding-top: 24px;
			// padding-bottom: 24px;

			.brand {
				display: inline-block;
				justify-content: flex-start;
				align-items: center;

				span {
					font-size: 0.8em;
				}
			}

			.secondNav {
				display: flex;
				gap: 8px;
				justify-content: flex-end;

				a svg {
					display: block;
					margin: 0 auto;
				}
			}
		}

		p {
			color: var(--dark);
			font-weight: 700;
		}

		nav {
			display: flex;
			justify-content: center;
			gap: 12px;

			a {
				font-size: 15px;
				line-height: 1;
				color: var(--dark);
				font-weight: 500;
				transition: color 0.2s;
				text-decoration: none;

				&:hover,
				&:focus {
					font-weight: 500;
					color: var(--accent);
				}
			}
		}

		a {
			text-decoration: none;
			color: var(--dark);

			&:hover,
			&:focus {
				text-decoration: underline;
				color: var(--accent);
			}
		}
	</style>
</header>
