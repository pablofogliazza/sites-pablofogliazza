export async function getStaticPaths() {
	const posts = await getCollection('posts')
	return posts.map((p) => {
		return {
			params: { slug: p.slug },
		}
	})
}

const { slug } = Astro.params

const post = await getEntry('posts', slug)
const tagsData = await getEntries(post.data.tags)

const { Content, headings } = await post.render()

const imageUrl = `url(${post.data.image.src})`
---

<Layout title={`pablofogliazza.dev Â· ${post.data.title}`}>
	<main class="blog">
		<div class="blog__top"></div>
		<div class="blog__container">
			<div class="blog__box">
				<a class="blog__back" href="/blog/">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="transform: ;msFilter:;"><path d="M21 11H6.414l5.293-5.293-1.414-1.414L2.586 12l7.707 7.707 1.414-1.414L6.414 13H21z"></path></svg>
					<span>Volver</span>
				</a>
				<div class="blog__date">{post.data.date.toLocaleDateString('es-AR')}</div>
			</div>
			<h1 class="blog__title">{post.data.title}</h1>
			<p class="blog__excerpt">{post.data.excerpt}</p>
			<div class="blog__tags">
				{tagsData.map((tag) => <span>{tag.data.name}</span>)}
			</div>
			<Image class="blog__image" width={1080} height={720} src={post.data.image} alt={post.data.title} loading="lazy" />
			<div class="blog__content">
				<Content />
			</div>
		</div>
	</main>

	<style lang="scss" define:vars={{ imageUrl }}>
		.blog {
			&__top {
				margin-top: 89.5px;
				filter: brightness(1.1) contrast(1.6);
				background-blend-mode: multiply;
				opacity: 0.8;
				height: 8rem;
				background-image: var(--imageUrl);
				background-size: cover;
				background-position: center center;
			}
			&__container {
				width: min(90%, 1040px);
				margin: 0 auto;
				padding-top: 4rem;

				display: flex;
				flex-direction: column;
				align-items: flex-start;
				gap: 1.5rem;
			}

			&__box {
				display: flex;
				justify-content: space-between;
				align-items: center;
				width: 100%;
				margin-bottom: 2rem;
			}

			&__back {
				display: flex;
				align-items: center;
				color: rgb(var(--dark));
				text-decoration: none;
				transition: color 0.2s;
				font-size: 13px;
				font-weight: 400;
				line-height: 1;
				text-transform: uppercase;
				opacity: 0.8;

				svg {
					display: block;
					margin-right: 0.5rem;
					width: auto;
					height: 0.8rem;
					fill: rgb(var(--dark));
					padding-bottom: 1px;
				}

				&:hover {
					color: rgb(var(--accent));

					svg {
						fill: rgb(var(--accent));
					}
				}
			}

			&__date {
				font-size: 13px;
				font-weight: 400;
				line-height: 1;
				color: rgb(var(--dark));
				opacity: 0.8;
				text-transform: uppercase;
			}
			&__title {
				font-family: var(--fontTitle);
				line-height: 1.15;
				font-size: 3rem;
				text-wrap: balance;
				font-weight: 900;
				margin-top: 0;
				margin-bottom: 0;
				color: rgb(var(--dark));
			}

			&__excerpt {
				//margin-bottom: 2rem;
				font-size: 1.2rem;
				line-height: 1.5;
				font-weight: 300;
				color: var(--dark);
				opacity: 0.8;
				text-wrap: balance;
			}

			&__tags {
				span {
					text-transform: uppercase;
					display: inline-block;
					padding: 21px;
					border-radius: 32px;
					font-size: 12px;
					font-weight: 400;
					line-height: 1;
					margin: 0 8px 0 0;
					//background-color: #463f3a11;
					color: rgba(var(--dark), 0.8);
					border: 1px solid rgba(var(--dark), 0.3);
					opacity: 1;
					font-family: var(--fontTitle);
				}
			}

			&__image {
				width: calc(100% + 4rem);
				transform: translateX(-2rem);
				margin: 2rem 0;
				border-radius: 16px;
				box-shadow: 0 0 16px rgba(0, 0, 0, 0.1);
			}
			&__content {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}
		}
	</style>
</Layout>
