---
import { baseData } from '@/data/siteData'

type Props = {
	title?: string
	description?: string
}

const { title = baseData.title, description = baseData.description } = Astro.props
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<meta name="description" content={description} />
	<link href="https://fonts.cdnfonts.com/css/neue-haas-grotesk-display-pro?styles=82961,82967,82965,82959,82957" rel="stylesheet" />
	<title>{title}</title>
</head>
