---
import '@fontsource/poppins/200.css'
import '@fontsource/poppins/300.css'
import '@fontsource/poppins/400.css'
import '@fontsource/poppins/500.css'
import '@fontsource/poppins/700.css'
import '@fontsource/poppins/800.css'

import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import BaseHead from './BaseHead.astro'
---

<!doctype html>
<html lang="es-AR">
	<BaseHead {...Astro.props} />
	<body>
		<main>
			<Header />
			<slot />
			<Footer />
		</main>
		<style is:global>
			:root {
				--accent: 71, 201, 173; /*255, 96, 53; /*211, 58, 44; /*250, 163, 86; /*248, 165, 89; /*109, 164, 170;*/
				--light: 15, 25, 43; /*31, 54, 61*/
				--dark: 243, 248, 249; /*243, 248, 249; */
				--shadowDark: 0 2px 10px 0 rgba(31, 54, 61, 0.1);
				--fontTitle: 'Poppins', sans-serif; /*'p22-mackinac-pro', serif;*/
				--fontText: 'Poppins', sans-serif; /*'Inter Variable', sans-serif;*/
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			html {
				/* font-family: "Figtree Variable", sans-serif; */
			}
			body {
				font-family: var(--fontText);
				font-size: 17px;
				line-height: 1.5;
				color: rgb(var(--dark));
				font-weight: 400;
				background-color: rgb(var(--light));
			}
		</style>
	</body>
</html>
